<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/dot_stroke"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="64dp">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			/>

		<cz.intik.overflowindicator.OverflowPagerIndicator
			android:id="@+id/view_pager_indicator"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			app:dots_fill_color="#ff0000"
			app:dots_stroke_color="#000000"
			app:dots_max_count="7"
			app:dots_size="5dp"
			app:dots_stroke_width="2dp"
			app:dots_margin="2dp"
			/>

	</FrameLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="64dp">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view_simple"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			/>

		<cz.intik.overflowindicator.OverflowPagerIndicator
			android:id="@+id/view_pager_indicator_simple"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			/>

	</FrameLayout>

</LinearLayout>
